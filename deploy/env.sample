## Local/Dev sample env file
# 복사해서 deploy/.env.local로 사용하세요. (gitignore 대상)

# Database
POSTGRES_DB=dormmate_dev
POSTGRES_USER=dormmate_user
POSTGRES_PASSWORD=pleasesetup
POSTGRES_PORT=5432
DB_HOST=localhost
DB_URL=jdbc:postgresql://localhost:5432/dormmate_dev
DB_USERNAME=dormmate_user
DB_PASSWORD=pleasesetup
DATABASE_URL=postgres://dormmate_user:pleasesetup@localhost:5432/dormmate_dev

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Spring / JWT (로컬 테스트용 값)
JWT_SECRET=dev-local-jwt-secret-change-me
JWT_TTL_MIN=20
JWT_EXPIRATION=45000
JWT_REFRESH_EXPIRATION=300000

# CORS & Rate Limiting
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_REQ_PER_MIN=600

# Frontend / Proxy
NEXT_PUBLIC_API_BASE=http://localhost:8080
NEXT_PUBLIC_FIXTURE=0
PROXY_HTTP_PORT=8080
PROXY_HTTPS_PORT=8443
SERVER_NAME=localhost
ENABLE_TLS=false
TLS_DOMAIN=
TLS_EMAIL=
TLS_SELF_SIGNED=true

# Admin (로컬 전용)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# Logging & Timezone
LOG_LEVEL=json
SERVER_PORT=8080
TZ=UTC
